<div class="container">
    <h1>Itinerary</h1>

    <table class="table">
    <thead>
        <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Activity</th>
        <th>Description</th>
        <th colspan="3">Options</th>
        </tr>
    </thead>

    <tbody>
    <% @activities.each do | activity | %>
        <tr>
        <td>
        <% if activity.date? %>
            <%= activity.date.strftime("%A %-d-%b-%Y") %>
        <% else %>
            &nbsp;
        <% end %>
        </td>

        <td>
        <% if activity.time? %>
            <%= activity.time.strftime("%l:%M %P") %>
        <% else %>
            &nbsp;
        <% end %>
        </td>

        <td>
        <% if activity.title? %>
            <%= sanitize(activity.title) %>
        <% else %>
            &nbsp;
        <% end %>
        </td>

        <td>
        <% if activity.description? %>
            <%= sanitize(activity.description) %>
        <% else %>
            &nbsp;
        <% end %>
        </td>

        <td><%= link_to 'View Details', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Delete', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
    <% end %>
    </tbody>
    </table>

    <br>

    <button type="button" class="btn btn-outline-primary">  
        <%= link_to 'Add a New Activity', new_activity_path %>
    </button>
</div>