<div class="container">
    <h1>
    <%= sanitize(@link.title) %>
    </h1>

    <p>
    <strong>Link:</strong>
    <%= link_to "#{@link.link}", @link.link, target: "blank" %>
    </p>

    <p>
    <strong>Title:</strong>
    <%= @link.title %>
    </p>

    <p>
    <strong>Description:</strong>
    <%= sanitize(@link.description) %>
    </p>

    <p>
    <strong>Category:</strong>
    <%= @link.category %>
    </p>

    <br>

    <% if user_signed_in? %>
        <% if @link.user_id == current_user.id %>
            <button type="button" class="btn btn-outline-primary">
            <%= link_to 'Edit', edit_link_path(@link) %>
            </button>
        <% end %>
    <% end %>

    <button type="button" class="btn btn-outline-primary">
        <%= link_to 'View All Links', links_path %>
    </button>

    <br>
</div>