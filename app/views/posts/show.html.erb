<div class="container">
    <h1>
    <%= sanitize(@post.title) %>
    </h1>


    <%= image_tag url_for(@post.photo), style:'width:40%' %>

    <br>

    <p>
    <strong>Comments:</strong>
    <%= sanitize(@post.comment) %>
    </p>

    <button type="button" class="btn btn-outline-primary">
        <%= link_to 'Download photo', rails_blob_url(@post.photo, disposition: "attachment") %> 
    </button>

    <% if user_signed_in? %>
        <% if @post.user_id == current_user.id %>
            <button type="button" class="btn btn-outline-primary">
                <%= link_to 'Edit', edit_post_path(@post) %>
            </button>
        <% end %>
    <% end %>

    <button type="button" class="btn btn-outline-primary">
        <%= link_to 'View All Photos', posts_path %>
    </button>

    <br>
</div>